@page
@model SerilogElasticKibanaCore.Pages.CalculatorModel
@{
}

<h2>Calculator</h2>

<form method="post">
    <div class="form-group mb-2">
        <label>Number 1</label>
        <input type="number" class="form-control" asp-for="Number1" />
    </div>

    <div class="form-group mb-2">
        <label>Number 2</label>
        <input type="number" class="form-control" asp-for="Number2" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="form-group mb-2">
    <label>Result</label>
    <input type="text" class="form-control" readonly asp-for="Result" />
</div>